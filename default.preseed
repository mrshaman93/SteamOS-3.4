d-i debian-installer/locale string en_US

# Optionally specify additional locales to be generated.
d-i localechooser/supported-locales multiselect \
                en_US.UTF-8, \
                de_DE.UTF-8, \
                fr_FR.UTF-8, \
                it_IT.UTF-8, \
                ko_KR.UTF-8, \
                es_ES.UTF-8, \
                zh_CN.UTF-8, \
                zh_TW.UTF-8, \
                ru_RU.UTF-8, \
                th_TH.UTF-8, \
                ja_JP.UTF-8, \
                pt_PT.UTF-8, \
                pl_PL.UTF-8, \
                da_DK.UTF-8, \
                nl_NL.UTF-8, \
                fi_FI.UTF-8, \
                nb_NO.UTF-8, \
                sv_SE.UTF-8, \
                hu_HU.UTF-8, \
                cs_CZ.UTF-8, \
                ro_RO.UTF-8, \
